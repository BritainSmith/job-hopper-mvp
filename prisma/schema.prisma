// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Job {
  id         Int      @id @default(autoincrement())
  title      String
  company    String
  location   String
  applyLink  String
  applied    Boolean  @default(false)
  dateScraped DateTime @default(now())
}
